<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polly.flat" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:label="Alarm"
            android:theme="@style/GreenTheme" >
        </activity>
        <activity
            android:name=".EmailActivity"
            android:label="Email"
            android:theme="@style/OrangeTheme" >
        </activity>
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:theme="@style/LightBlueTheme" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="Search"
            android:theme="@style/RedTheme" >
        </activity>
        <activity
            android:name=".TaskActivity"
            android:label="New Task"
            android:theme="@style/BlueTheme" >
        </activity>
        <activity
            android:name=".PinActivity"
            android:label="Point of Interest"
            android:theme="@style/BrownTheme" >
        </activity>
        <activity
            android:name=".WeatherActivity"
            android:label="What's weather inside"
            android:theme="@style/YellowTheme" >
        </activity>
    </application>

</manifest>
